@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.BlogPost>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "BasePage.cshtml";

    var heroImage = Model.Content.GetPropertyValue<IPublishedContent>("heroImage");
}



<div class="jumbotron text-center">
    <h1>@Umbraco.Field("title")</h1>
    <p>by @Umbraco.Field("author")</p>
</div>

<div class="container">
    <p>@Umbraco.Field("summary")</p>
    <img src="@heroImage.Url" class="img-thumbnail img-fluid" alt="Cinque Terre"/>
</div>